@model OnlineBookStore.Models.Product

@{
    ViewBag.Title = "ProductInfo";
}

@{ 
    int c = ((int ?)Session["UserID"] ?? 0);
}

<div class="product-container">
    <h1 style="margin: 0px; padding: 10px 0 0 10px">Product Details</h1>
    <div class="row">
        <div class="col-2">
            <img src="@Url.Content(Model.Image_1)" width="420" height="540" id="ProductImg"/>
            <div class="small-img-row">
                <div class="small-img-col">
                    <img src="@Url.Content(Model.Image_1)" width="100" height="150" class="small-img" />
                </div>
                <div class="small-img-col">
                    <img src="@Url.Content(Model.Image_2)" width="100" height="150" class="small-img" />
                </div>
                <div class="small-img-col">
                    <img src="@Url.Content(Model.Image_3)" width="100" height="150" class="small-img" />
                </div>
                <div class="small-img-col">
                    <img src="@Url.Content(Model.Image_4)" width="100" height="150" class="small-img" />
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="sub-col">
                <div class="sub-col-2">
                    <p>Home / Book</p>
                    <h1> @Model.BookName </h1>
                    <h3> Author : @Model.Author </h3>
                    <h4> ₹@Model.Price </h4>
                    <input type="number" value="1" />
                    <a href="@Url.Action("CartItems" ,"WishList", new { id = Model.BookID})" class="cart-btn"> Add To Cart </a>
                    <br /> <br />
                    <a href="@Url.Action("Shippingdetails", "Order", new { id = c })" class="buy-btn"> Buy Now >> </a>
                </div>

                <div class="sub-col-2">
                    <a class="star">
                        <i class="fa fa-star fa-lg"></i>
                        <i class="fa fa-star fa-lg"></i>
                        <i class="fa fa-star fa-lg"></i>
                        <i class="fa fa-star fa-lg"></i>
                        <i class="fa fa-star-half-o fa-lg"></i>
                    </a>
                    <div class="side-img">
                        <img src="~/Content/Images/cash-on-delivery.png" width="50" height="50" style="border: none" />
                    </div>
                    <a style="font-size:15px; text-decoration: underline; cursor: pointer; color: blue; padding-left: 157px">
                        pay on delivery
                    </a>
                    <div class="side-img">
                        <img src="~/Content/Images/delivery-truck.png" width="50" height="50" style="border: none" />
                    </div>
                    <a style="font-size:15px; text-decoration: underline; cursor: pointer; color: blue; padding-left: 167px">
                        Free Delivery
                    </a>
                    <div class="side-img">
                        <img src="~/Content/Images/product-return.png" width="50" height="50" style="border: none" />
                    </div>
                    <a style="font-size:15px; text-decoration: underline; cursor: pointer; color: blue; padding-left: 120px">
                        10 Days Replacement only
                    </a>
                </div>
            </div>

            <h3> Product Description <i class="fa fa-indent"></i> </h3>
            <p>
                @Model.Description
            </p>
            <hr />
            <div class="more-info">
                <div class="info">
                    <h4> Print Length </h4>
                    <i class="fa fa-file fa-lg"></i>
                    <h3 class="page"> @Model.PrintLength pages </h3>
                </div>
                <div class="info">
                    <h4> Language </h4>
                    <i class="fa fa-globe fa-lg"></i>
                    <h3 class="language"> @Model.Language </h3>
                </div>
                <div class="info">
                    <h4> Publication Date </h4>
                    <i class="fa fa-calendar fa-lg"></i>
                    <h3 class="date"> @Model.PublicationDate.ToString("dd-MMMM-yyyy") </h3>
                </div>
                <div class="info">
                    <h4 class="publisher"> Publisher </h4>
                    <i class="fa fa-building fa-lg"></i>
                    <h3> @Model.Publisher </h3>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

<style>
    .product-container {
        background: radial-gradient(#fff, #E6E6FA);
    }
    .product-container .row{
        display: flex;
        padding-left: 50px;
    }
    .product-container .col-2{
        padding: 20px;
    }
    .product-container .sub-col{
        display: flex;
    }
    .product-container .sub-col-2{
        flex-basis: 50%;
    }
    .product-container .sub-col-2 .star{
        padding-left: 120px;
    }
    .product-container .sub-col-2 .side-img{
        padding-top: 20px;
        padding-left: 190px;
    }
    .product-container .col-2 img{
        cursor: pointer;
    }
    .product-container .col-2 h1{
        color: #444;
    }
    .product-container .col-2 h3{
        color: #444;
    }
    .product-container .col-2 h4{
        color: #444;
        font-size: 20px;
    }
    .product-container .col-2 p{
        color: #444;
    }
    .product-container .col-2 input{
        width: 70px;
        height: 35px;
        padding-left: 10px;
        margin-right: 10px;
        border: 1px solid #ff523b;
    }
    input:focus{
        outline: none;
    }
    .cart-btn {
        background: #ff523b;
        color: #fff;
        padding: 8px 20px;
        border-radius: 6px;
        transition: 0.3s;
    }
    .buy-btn {
        background: #27ae60;
        color: #fff;
        padding: 8px 20px;
        border-radius: 6px;
        transition: 0.3s;
    }
    .buy-btn:hover{
        background: #248a4f;
    }
    .product-container .fa{
        color: #ff532b;
        margin-left: 10px;
    }
    .product-container .small-img-row{
        display: flex;
        justify-content: space-between;
    }
    .product-container .small-img-col{
        flex-basis: 24%;
        cursor: pointer;
    }
    .product-container .col-2 img{
        border: 1px solid #DCDCDC;
    }
    .product-container .more-info {
        display: flex;
        justify-content: space-around;
    }
    .product-container .more-info .info .page{
        padding-left: 10px;
    }
    .product-container .more-info .info .language{
        padding-left: 18px;
    }
    .product-container .more-info .info .date{
        padding-left: 21px;
    }
    .product-container .more-info .info .publisher{
        padding-left: 93px;
    }
    .product-container .more-info .info h3{
        font-weight: 500;
    }
    .product-container .more-info .info .fa-file{
        padding-left: 40px;
    }
    .product-container .more-info .info .fa-globe{
        padding-left: 27px;
    }
    .product-container .more-info .info .fa-calendar{
        padding-left: 55px;
    }
    .product-container .more-info .info .fa-building{
        padding-left: 120px;
    }
</style>

<script type="text/javascript">
    var ProductImg = document.getElementById("ProductImg");
    var SmallImg = document.getElementsByClassName("small-img");

    SmallImg[0].onclick = function () {
        ProductImg.src = SmallImg[0].src;
    }
    SmallImg[1].onclick = function() {
        ProductImg.src = SmallImg[1].src;
    }
    SmallImg[2].onclick = function() {
        ProductImg.src = SmallImg[2].src;
    }
    SmallImg[3].onclick = function() {
        ProductImg.src = SmallImg[3].src;
    }
</script>

